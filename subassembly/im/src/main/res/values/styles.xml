<resources>
    <!-- Base application party_theme. -->
    <style name="im_AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your party_theme here. -->
        <item name="colorPrimary">@color/im_colorPrimary</item>
        <item name="colorPrimaryDark">@color/im_colorPrimaryDark</item>
        <item name="colorAccent">@color/im_colorAccent</item>
        <item name="android:windowAnimationStyle">@style/im_Animation_Activity</item>
    </style>

    <style name="im_Animation_Activity">
        <item name="android:activityOpenEnterAnimation">@anim/public_translate_right_to_center</item>
        <item name="android:activityOpenExitAnimation">@anim/public_translate_center_to_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/public_translate_left_to_center</item>
        <item name="android:activityCloseExitAnimation">@anim/public_translate_center_to_right</item>
    </style>
</resources>
