<resources>

    <!-- Base application party_theme. -->
    <style name="public_AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your party_theme here. -->

        <item name="android:windowBackground">@color/public_theme_background</item>
        <item name="colorPrimary">@color/public_colorprimary</item>
        <item name="colorPrimaryDark">@color/public_colorprimarydark</item>
        <item name="colorAccent">@color/public_colorprimarydark</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/public_Activity_Animation</item>
    </style>

    <style name="public_Activity_Animation">
        <item name="android:activityOpenEnterAnimation">@anim/public_translate_right_to_center
        </item>
        <item name="android:activityOpenExitAnimation">@anim/public_translate_center_to_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/public_translate_left_to_center
        </item>
        <item name="android:activityCloseExitAnimation">@anim/public_translate_center_to_right
        </item>
    </style>

    <style name="public_dialog_inout_anim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/public_dialog_enter</item>
        //进入时的动画
        <item name="android:windowExitAnimation">@anim/public_dialog_exit</item>
        //退出时的动画
    </style>


    <style name="public_common_dialog_style" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/public_shape_rect_13_00000000</item>
        <!--//设置dialog的背景，此处为系统给定的透明值 -->
        <item name="android:windowFrame">@null</item>
        <!--//Dialog的windowFrame框为无 -->
        <item name="android:windowNoTitle">true</item>　　　　　　　　 <!--//是否显示标题-->
        <item name="android:windowIsFloating">true</item>
        <!--//是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item>
        <!--//是否半透明 -->
        <item name="android:windowContentOverlay">@null</item>
        <!--//是否有覆盖 -->
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <!--//设置Activity出现方式 -->
        <item name="android:backgroundDimEnabled">true</item>
    </style>


    <!--自定义Dialog样式-->
    <style name="public_my_dialog" parent="AlertDialog.AppCompat">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>
    <!--弹出Dialog动画-->
    <style name="public_animation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/public_dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/public_dialog_exit</item>
    </style>


    <style name="public_dialog_style" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/public_shape_13_ffffff</item>
        <!--//设置dialog的背景，此处为系统给定的透明值 -->
        <item name="android:windowFrame">@null</item>
        <!--//Dialog的windowFrame框为无 -->
        <item name="android:windowNoTitle">true</item>　　　　　　　　 <!--//是否显示标题-->
        <item name="android:windowIsFloating">true</item>
        <!--//是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item>
        <!--//是否半透明 -->
        <item name="android:windowContentOverlay">@null</item>
        <!--//是否有覆盖 -->
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <!--//设置Activity出现方式 -->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="public_version_dialog_style" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/public_color_transparent</item>
        <!--//设置dialog的背景，此处为系统给定的透明值 -->
        <item name="android:windowFrame">@null</item>
        <!--//Dialog的windowFrame框为无 -->
        <item name="android:windowNoTitle">true</item>　　　　　　　　 <!--//是否显示标题-->
        <item name="android:windowIsFloating">true</item>
        <!--//是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item>
        <!--//是否半透明 -->
        <item name="android:windowContentOverlay">@null</item>
        <!--//是否有覆盖 -->
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <!--//设置Activity出现方式 -->
        <item name="android:backgroundDimEnabled">true</item>
    </style>
</resources>
