<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <com.lihang.ShadowLayout
        android:id="@+id/mShadowLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        app:hl_layoutBackground="@color/public_white"
        app:hl_cornerRadius="@dimen/public_dp_5"
        app:hl_shadowColor="#2a000000"
        app:hl_shadowLimit="@dimen/public_dp_2"
        >
    <LinearLayout
        android:layout_width="@dimen/public_dp_260"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:paddingLeft="@dimen/public_dp_13"
        android:paddingTop="@dimen/public_dp_5"
        android:paddingRight="@dimen/public_dp_13"
        android:paddingBottom="@dimen/dp_5">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:gravity="left|center_vertical"
            android:textColor="@color/public_black"
            android:textSize="@dimen/public_dp_16"
            tools:text="11111111111111111" />

        <EditText
            android:id="@+id/edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textColor="@color/public_black_333"
            android:textSize="@dimen/public_sp_15"
            tools:text="11111111111111111111111111111111111111111111111" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/public_dp_38"
            android:layout_marginLeft="@dimen/public_dp_100"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cancel_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:text="@string/public_ove"
                android:textColor="@color/public_colorprimary"
                android:textSize="@dimen/public_dp_13" />


            <TextView
                android:id="@+id/confirm_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:text="@string/public_sure"
                android:textColor="@color/public_colorprimary"
                android:textSize="@dimen/public_dp_13" />
        </LinearLayout>
    </LinearLayout>
    </com.lihang.ShadowLayout>
</RelativeLayout>