<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/public_white">

    <LinearLayout
        android:id="@+id/mShadowLayout"
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/public_dp_30"
        android:paddingRight="@dimen/public_dp_30"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/public_dp_7"
            android:textColor="@color/public_black_333"
            android:textSize="@dimen/public_dp_13"
            tools:text="密码" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"

                android:layout_toLeftOf="@id/clear_text"
                android:background="@null"
                android:layout_centerVertical="true"
                android:drawablePadding="@dimen/public_padding_20dp"
                android:duplicateParentState="true"
                android:singleLine="true"
                android:textColor="@color/public_black_333"
                android:textSize="@dimen/public_dp_17"
                tools:text="@string/arms_app_name" />

            <ImageView
                android:visibility="gone"
                android:id="@+id/clear_text"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:scaleType="center"
                android:src="@drawable/public_clear_edittext" />

        </RelativeLayout>


        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/tv_title"
            android:layout_alignLeft="@id/tv_title"
            android:background="@color/public_color_4a4a4a"
            android:visibility="visible" />
    </LinearLayout>


</LinearLayout>