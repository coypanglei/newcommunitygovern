<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/null_content_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/public_white"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/public_dp_30">

    <ImageView
        android:id="@+id/null_view"
        android:layout_width="@dimen/public_dp_120"
        android:layout_height="@dimen/public_dp_70"
        android:layout_marginTop="@dimen/public_dp_10"
        android:scaleType="fitXY"
        android:src="@drawable/public_null_content"
        tools:layout_editor_absoluteY="266dp" />

    <TextView
        android:id="@+id/null_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/public_null_content"
        android:textColor="@color/public_gray_999"
        android:textSize="15sp" />
</LinearLayout>